<%= form_with(model: entry, local: true) do |form| %>
  <% if entry.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(entry.errors.count, "error") %> prohibited this entry from being saved:</h2>

      <ul>
      <% entry.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <br>
  <div class="field">
    <%= form.text_field :title, id: :entry_title, placeholder: "Title", class: "form-control" %>
  </div>
  <br>
  <div class="field">
    <%= form.text_area :content, id: :entry_content, placeholder: "Write entry here...", class: "form-control", rows: 9 %>
  </div>

  <div class="actions ">
    <%= form.submit %>
  </div>
<% end %>
