<div class="container">
  <p id="notice"><%= notice %></p>
  <div class="blog-page">

    <h1>
      <%= @entry.title %>
    </h1>

    <p class="blog-body">
      <%= @entry.content %>
    </p>
    <% if signed_in? && current_user.admin? %>
    <%= link_to 'Edit', edit_entry_path(@entry), class: "btn btn-dark", style: "color:white;" %> |
    <% end %>
    <%= link_to 'Back', entries_path, class: "btn btn-dark", style: "color:white;" %>
  </div>
</div>
