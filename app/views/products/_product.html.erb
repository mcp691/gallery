
<div class="card prod-cards" style="width: 18rem;">
  <%= link_to image_tag(product.image_url, class: "img-fluid card-img"), product %>
  <div class="card-body">
    <h1><%= product.name %></h1>
    <%= product.description %>
    <%= number_to_currency(product.price/100.to_f) %>
  </div>
</div>

<%= link_to 'Show', product %>
<%= link_to 'Edit', edit_product_path(product) %>
<%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %>
